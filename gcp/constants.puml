@startuml

!if (%get_variable_value("$INCLUSION_MODE") == "remote")
    !if (%not(%variable_exists("$GCP_LIB_BRANCH")))
        !global $GCP_LIB_BRANCH="master"
    !endif
    !if (%not(%variable_exists("$GCP_LIB_BASE_URL")))
        !global $GCP_LIB_BASE_URL="https://raw.githubusercontent.com/tmorin/plantuml-libs/" + $GCP_LIB_BRANCH + "/gcp"
    !endif
    !if (%not(%variable_exists("$IMAGE_BASE_PATH")))
        !global $IMAGE_BASE_PATH=$GCP_LIB_BASE_URL + "/"
    !endif
!else
    !if (%not(%variable_exists("$IMAGE_BASE_PATH")))
        !global $IMAGE_BASE_PATH=""
    !endif
!endif

' common
!global $ARROW_COLOR="#747A80"
!global $FONT_SIZE_SM=10
!global $FONT_SIZE_LG=20
!global $COLOR_GREY="#dcdcdc"
!global $COLOR_GREY_BG="#f2f2f2"
!global $COLOR_GREY_FC="#595959"
!global $COLOR_GREY_FC_LIGHT="#595959"
!global $COLOR_GREY_BD_LIGHT="#e1e1e1"
!global $COLOR_GREY_BD="#3f3f3f"

' custom

@enduml