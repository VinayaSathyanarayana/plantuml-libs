@startuml

' by default the inclusion mode is remote
!if (%not(%variable_exists("$INCLUSION_MODE")))
    !global $INCLUSION_MODE="remote"
!endif

!if ($INCLUSION_MODE == "remote")
    ' remote inclusions
    !if (%not(%variable_exists("$AZURE_LIB_BRANCH")))
        !global $AZURE_LIB_BRANCH="master"
    !endif
    !if (%not(%variable_exists("$AZURE_LIB_BASE_URL")))
        !global $AZURE_LIB_BASE_URL="https://raw.githubusercontent.com/tmorin/plantuml-libs/" + $AZURE_LIB_BRANCH + "/azure"
    !endif
    !includeurl $AZURE_LIB_BASE_URL/constants.puml
    !includeurl $AZURE_LIB_BASE_URL/functions.puml
    !includeurl $AZURE_LIB_BASE_URL/styles.puml
    !includeurl $AZURE_LIB_BASE_URL/sprites.puml
!else
    ' local inclusions
    !include constants.puml
    !include functions.puml
    !include styles.puml
    !include sprites.puml
!endif

@enduml