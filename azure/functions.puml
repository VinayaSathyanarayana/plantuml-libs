@startuml

' Icons

!function getIconPath($size, $name) return $IMAGE_BASE_PATH + "icons-" + "x" + $size + "/" + $name + ".png"
!function get50Path($name) return getIconPath("50", $name)
!function getIcon($name) return get50Path($name)

' Inclusion

!function includeSubLibrary($name)
    !if (%get_variable_value("$INCLUSION_MODE") == "remote")
        !includeurl $AZURE_LIB_BASE_URL/$name.puml
    !else
        !include $name.puml
    !endif
!endfunction

' Relationship

!function Relationship($desc="", $tech="")
    !if ($desc) && ($tech)
        <size:12>$desc</size>\n<size:11>[$tech]</size>
    !elseif ($desc)
        <size:12>$desc</size>
    !else
        <size:11>[$tech]</size>
    !endif
!endfunction

@enduml