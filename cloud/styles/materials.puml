@startuml

skinparam DefaultTextAlignment center

skinparam Arrow {
    FontColor $FONT_COLOR
    Color #535B63
    Thickness 1
}

skinparam Card<<CloudElement>> {
    BorderThickness 0
    BorderColor none
    BackgroundColor none
    shadowing false
}

