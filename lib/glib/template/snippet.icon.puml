' configures the library
!global $LIB_BASE_LOCATION="{{= it.config.remoteUrl }}/{{= it.config.libDir }}"

' loads the library
!include $LIB_BASE_LOCATION/bootstrap.puml
{{ } else if (it.snippet.location === 'local') { }}
